<table class="table table-striped" style="width.100%">
  <thead>
    <th>Codigo</th>
    <th>Nombre</th>
    <th>Stock</th>
    <th>Precio</th>
  </thead>
  <tbody>
    <% @productos.each do |producto| %>
      <tr>
        <td><%= producto.codigo %></td>
        <td><%= producto.nombre %></td>
